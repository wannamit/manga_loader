<% if @image_url.present? %>
  var $images = $('img');
  var $last_image = $($images[$images.length - 1]);
  $last_image.after("<br/><img id=<%= @last_page %> src=<%= @image_url %>></img>")
<% end %>

<% if @next_page_url.present? %>
  setTimeout((function() {
    console.log('reloading vitra...');
    return $.ajax({
      type: "get",
      url: window.location.href + "?url=<%= @next_page_url %>",
      dataType: 'script'
    });
  }), 100);
<% end %>